<nav>
    <div id="header">All our Flats (<%= @flats.count %>)</div>
</nav>

<div >
    <%= link_to  "Add a Flat", new_flat_path %>
</div>

<div class="cards">
<% @flats.reverse_each do |flat| %>
    <div class="card-category">
        <%= link_to  flat.name, flat_path(flat) %> <%= link_to "Delete", flat_path(flat), method: :delete %>
    </div>
<% end %>
</div>
