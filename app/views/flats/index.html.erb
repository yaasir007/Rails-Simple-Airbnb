<nav>
    <div id="header">All our Flats (<%= @flats.count %>)</div>
</nav>

<nav>
    <div id="header">
        <%= link_to  "Add a Flat", new_flat_path %>
    </div>
</nav>

<div class="container">
<% @flats.reverse_each do |flat| %>
    <div class="sub-container">
        <%= link_to  flat.name, flat_path(flat) %>
        <%= link_to "Delete", flat_path(flat), method: :delete %>
    </div>
<% end %>
</div>
